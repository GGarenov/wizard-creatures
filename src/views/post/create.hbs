<main>

    <section id="create-page">
        <div class="createSection">
            <div class="info">
                <h2>"Dobby Never Meant To Kill! Dobby Only Meant to Maim, or Seriously Injure."</h2>
            </div>

            <form method="POST" class="createForm">
                <h2>Create Post</h2>
                <ul class="noBullet">
                    <li>
                        <label for="title">Name:</label>
                        <input type="text" class="inputFields" id="name" placeholder="name" name="name" value="" />
                    </li>
                    <li>
                        <label for="key-word">Species:</label>
                        <input type="text" class="inputFields" id="species" placeholder="specie" name="specie"
                            value="" />
                    </li>
                    <li>
                        <label for="skin">Skin Colour:</label>
                        <input type="text" class="inputFields" id="skin" placeholder="skin color" name="skin"
                            value="" />
                    </li>
                    <li>
                        <label for="date">Eye Colour:</label>
                        <input type="text" class="inputFields" id="eye" placeholder="eye color" name="eye" value="" />
                    </li>
                    <li>
                        <label for="image">Creature Image:</label>
                        <input type="text" class="inputFields" id="image" placeholder="post image url here" name="image"
                            value="" />
                    </li>
                    <li>
                        <label for="description">Description:</label>
                        <textarea id="description" class="inputFields" name="description"
                            placeholder="Write description"></textarea>
                    </li>
                    <li id="center-btn">
                        <button id="create-btn">Create</button>
                    </li>
                </ul>
            </form>

        </div>
    </section>

</main>
